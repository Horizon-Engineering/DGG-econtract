<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="5" >

    <utils.widget.TextViewRegular
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="1.6"
        android:shadowDy="1.6"
        android:shadowRadius="2.6"
        android:text="@string/ppt_1_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" 
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/ppt_5_image" />

    <utils.widget.TextViewLight
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:gravity="center"
        android:maxLines="5"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="1.6"
        android:shadowDy="1.6"
        android:shadowRadius="2.6"
        android:text="@string/ppt_1_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" 
        android:visibility="gone"/>

</LinearLayout>