<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled state -->
    <item android:state_focused="false" android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <stroke android:width="1dp" android:color="@color/et_non_focus" />

            <corners android:radius="2dp" />
        </shape></item>

    <!-- enabled and pressed state -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <stroke android:width="2dp" android:color="@color/et_focus" />

            <corners android:radius="2dp" />
        </shape></item>

    <!-- enabled and focused state -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <stroke android:width="2dp" android:color="@color/et_focus" />

            <corners android:radius="2dp" />
        </shape></item>

</selector>